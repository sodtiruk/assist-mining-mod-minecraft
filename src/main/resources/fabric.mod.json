{
	"schemaVersion": 1,
	"id": "modid",
	"version": "${version}",
	"name": "assist-mining",
	"description": "Assist Mining is a mod that allows you to mine quickly in a 3x3x3 area.",
	"authors": [
		"Sutthirak Sutsaenya (Developer)",
		"Atikon Suksri (3D Artist)"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/sodtiruk/assist-mining-mod-minecraft"
	},
	"license": "MIT",
	"icon": "assets/assistminingid/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.example.MainMod"
		],
		"client": [
			"com.example.ExampleModClient"
		]
	},
	"mixins": [
		"modid.mixins.json",
		{
			"config": "modid.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.2",
		"minecraft": "~1.21.1",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}